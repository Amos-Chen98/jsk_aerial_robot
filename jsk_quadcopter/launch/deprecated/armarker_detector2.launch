<launch>
  <!-- <node pkg="rviz" type="rviz" name="rviz"/> -->
  <!-- args="-d $(find ar_pose)/launch/live_single.vcg"/> -->

  <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_cam" -->
  <!--       args="0 0 0.5 -1.57 0 -1.57 world usb_cam 1" /> -->

  <node name="uvc_camera" pkg="uvc_camera" type="camera_node" output="screen" >
    <param name="device" value="/dev/video1" />
    <param name="camera_info_url" type="string" value="file://$(find uvc_camera)/cam_calib_data/ksr_cal.yml"/>
    <param name="width" value="640" />
    <param name="height" value="480" />
    <param name="fps" value="30"/>
    <param name="frame_id" value="camera" />
    <remap from="camera_info" to="/usb_cam/camera_info"/>
    <remap from="image_raw" to="/usb_cam/image_raw"/>
  </node>


  <node name="ar_pose" pkg="ar_pose" type="ar_multi" respawn="false" output="screen">
    <param name="marker_pattern_list" type="string" value="$(find ar_pose)/data/object_4x4_bakui"/>
    <param name="threshold" type="int" value="100"/>
    <param name="publish_tf" type="bool" value="false"/>
  </node>
</launch>
