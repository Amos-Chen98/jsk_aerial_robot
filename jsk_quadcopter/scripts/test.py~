#!/usr/bin/env python
import roslib; roslib.load_manifest('jsk_quadcopter')
import rospy

from std_msgs.msg import Empty
from std_msgs.msg import Int8
from std_msgs.msg import UInt16

import sys, select, termios, tty

from numpy import *
import pylab as plt
 
theta = linspace(-pi, pi, 200)

h = 0.4
d = 0.4
l = 0.5

x1 = h/2 * sin(theta) + sqrt(2) *d * sin(pi/4 + theta/2)
y1 = h/2 * cos(theta) + sqrt(2) *d * cos(pi/4 + theta/2)

a = (h + 2 *d)/2
b = h/2 + (sqrt(2) -1) * d

x2 = b * cos(theta) + d
y2 = a * sin(theta)

plt.plot(x1, y1, color="k", marker="o")
plt.plot(x2, y2, color="k", marker="o")

psi = linspace(0, pi/4, 100)
 
y3 = (2*l - d/2) * sin(psi) + sqrt(2)* d * sin(pi/4 + psi)
x3 = -y3 * tan(psi) + sqrt(2)* d * cos(pi/4 + psi)
y5 = -y3

y4 = (2*l - d/2) * psi + d *( psi + 1)
x4 = -y3 * psi + d * (1 -psi)


plt.plot(x3, y3, color="k", marker="o")
plt.plot(x4, y4, color="b", marker="o")
plt.plot(x3, y5, color="b", marker="o")
plt.show()
