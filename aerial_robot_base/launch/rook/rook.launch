<?xml version="1.0"?>
<launch>
  <!-- ground truth mode: pos_control_mode: true, vel_control_mode: false, state_mode: 0 -->
  <!-- optical flow mode: pos_control_mode: false, flight_vel_mode: true,  state_mode: 1 -->

  ############################# Global Param ###################################

  <arg name="debug" default="false" />

  <!-- estimate mode -->
  <arg name="state_mode" value="1" />
  <!-- GROUND_TRUTH = 0 -->
  <!-- EGOMOTION_ESTIMATE = 1 -->
  <!-- for the outdoor experiment using magnetic, should not be here -->
  <arg name="only_imu_yaw" value="false" />

  <!-- flight control mode: should only be one true flag -->
  <arg name="pos_control_mode" value="false" /> <!-- pos mode -->
  <arg name="vel_control_mode" value="true" />  <!-- vel mode -->
  <arg name="att_control_mode" value="false" />  <!-- att mode -->

  ############## Motor Info ############################
  <rosparam file="$(find aerial_robot_base)/config/rook/MotorInfo.yaml" command="load" /> 

  ############### Sensors #############################
  <include file="$(find aerial_robot_base)/launch/rook/rook_sensors.launch" />

  ############################# Drone Platform ###################################
  <node pkg="aerial_robot_base" type="aerial_robot_base_node" name="aerial_robot_base_node"  output="screen" >

    ############### Basic Param  #####################
    <param if="$(arg pos_control_mode)" name="navigator/xy_control_mode" type="int" value="0"/>
    <param if="$(arg vel_control_mode)" name="navigator/xy_control_mode" type="int" value="3"/>
    <param if="$(arg att_control_mode)" name="navigator/xy_control_mode" type="int" value="4"/>

    <param name="estimator/state_mode" value= "$(arg state_mode)" />
    <param name="estimator/only_imu_yaw" value="$(arg only_imu_yaw)"/>

    <param name="rx_loop_rate" type="double" value="110"/>
    <param name="tx_loop_rate" type="double" value="40"/>
    <param name="tf_pub_loop_rate" type="double" value="120"/>

    ############### Sensor Fusion ######################
    <rosparam file="$(find aerial_robot_base)/config/rook/SensorFusion.yaml" command="load" />
    ############### PID Control ######################
    <rosparam file="$(find aerial_robot_base)/config/rook/PidControlConfig.yaml" command="load" />
    ############### Keyboard Navigation ##############
    <rosparam file="$(find aerial_robot_base)/config/rook/TeleopNavigationConfig.yaml" command="load" />
  </node>
</launch>



